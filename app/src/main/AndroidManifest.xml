<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clertonleal.dribbble" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.clertonleal.dribbble.application.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_dribbble"
        android:label="@string/app_name"
        android:theme="@style/DefaultTheme" >
        <activity
            android:name="com.clertonleal.dribbble.activity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.clertonleal.dribbble.activity.ShotActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity
            android:name="com.clertonleal.dribbble.activity.ShotViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
    </application>

</manifest>
